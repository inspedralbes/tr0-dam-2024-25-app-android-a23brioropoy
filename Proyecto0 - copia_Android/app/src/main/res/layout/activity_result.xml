<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_background"
    android:padding="16dp">

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_background"
        android:text="Reiniciar"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/totalQuestionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/timeTakenTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_text_background"
        android:padding="10dp"
        android:text="Total de preguntas: 10"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/timeTakenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo: 00:00"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/successesTextView"
        android:layout_marginBottom="-336dp"
        android:background="@drawable/rounded_text_background"
        android:padding="10dp" />

    <TextView
        android:id="@+id/successesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aciertos: 0"
        android:textSize="22sp"
        android:textColor="#00FF00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_text_background"
        android:padding="10dp" />

</RelativeLayout>